{% extends 'webmanager/templates/temp_back-end.html.twig' %}

{% block title %}
	Management Login
{% endblock %}

{% block stylesheets %} 
	<link rel="stylesheet" href="{{asset('/resources/webmanager/css/custom/login.css')}}"/>
{% endblock %}

{% block body %}
	<div class="container center-child">		
		<div class="panel panel-default panel-login center-cont">
			<div class="panel-heading text-center title-panel"> WMS Login:</div>
			<div class="panel-body text-center">
				<form action="{{ path('login_check') }}" method="post" class="form-horizontal">
				
					<div class="form-group">
						<label for="username" class="control-label col-xs-4">Username: </label>
						<div class="col-xs-8">
							<input placeholder="Enter Username..." class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
						</div>						    
					</div>
					
					<div class="form-group">
					    <label for="password" class="control-label col-xs-4">Password:</label>
					    <div class="col-xs-8">
					    	<input placeholder="Eneter Password..." class="form-control" type="password" id="password" name="_password"/>
					    </div>
					</div>
					
					<div class="form-group">
					    <button type="submit" class="btn btn-primary btn-login">Login</button>
					    <button type="reset" class="btn btn-danger btn-login">Cancel</button>
					</div>
			    
				</form>
				
			</div>
		</div>		
	</div>

	{% if error %}
	    <div class="alert alert-danger center-cont sm-size">
	    	<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	    	{{ error.messageKey|trans(error.messageData, 'security') }}	    
	    </div>
	{% endif %}

{% endblock %}
